{
  "name": "@chryb/asciidance",
  "version": "0.3.0",
  "description": "A beautiful ASCII art animation library with customizable noise patterns and effects.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://biering.github.io/asciidance",
  "bugs": {
    "url": "https://github.com/biering/asciidance/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biering/asciidance.git"
  },
  "author": "Christoph Biering <business@cbiering.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && npm publish",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "bumpp": "^10.1.0",
    "canvas": "^3.2.0",
    "jsdom": "^26.1.0",
    "tsdown": "^0.11.9",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "prettier": "^3.6.2"
  }
}
